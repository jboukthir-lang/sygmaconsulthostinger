PassengerAppRoot /home/u611120010/domains/sygmaconsult.com/public_html
PassengerAppType node
PassengerNodejs /opt/alt/alt-nodejs20/root/bin/node
PassengerStartupFile server.js
PassengerBaseURI /

# ----------------------------------------------------------------------
# ğŸ”§ Fixes & Optimizations
# ----------------------------------------------------------------------
Options -MultiViews
RewriteEngine On

# ğŸ”’ Force HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# ğŸ“‚ Fix for Next.js Static Assets (_next folder)
# This ensures that requests to _next/static are correctly handled
RewriteRule ^_next/static/(.*)$ .next/static/$1 [L]

# ğŸŒ Handle Routing (Pass everything else to Node.js)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ server.js [QSA,L]
